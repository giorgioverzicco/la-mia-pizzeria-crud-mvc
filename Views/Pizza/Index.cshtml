@using System.Globalization
@model List<Pizza>

@{
}

<div class="container py-3">
  <a asp-controller="Pizza" asp-action="Create" type="button" class="btn btn-primary mb-3">
    Create a new pizza
  </a>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @if (Model.Count > 0)
    {
      @foreach (Pizza pizza in Model)
      {
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
              <h4 class="card-title">@pizza.Name</h4>
              <p class="card-text">@pizza.Description</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id" type="button" class="btn btn-sm btn-outline-primary">View</a>
                  <a asp-controller="Pizza" asp-action="Update" asp-route-id="@pizza.Id" type="button" class="btn btn-sm btn-outline-warning">Edit</a>
                  <a type="button" data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
                <small class="text-muted">@pizza.Price.ToString("C", new CultureInfo("it-IT"))</small>
              </div>
            </div>
          </div>
        </div>
        
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">Confirm deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete @pizza.Name?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form method="POST" asp-action="Delete" asp-route-id="@pizza.Id">
                  <button class="btn btn-danger" type="submit">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      }
    }
    else
    {
      <div class="text-center">
        <p class="fs-3"> <span class="text-danger">We're sorry!</span> No pizzas in the list.</p>
      </div>
    }
  </div>
</div>
